<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoteApp.AnswerQuestions"
             Title="Unanswered Questions">
    <StackLayout>
        <ListView x:Name="UnansweredQuestionsListview">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Stroke="#FFFFFF" StrokeThickness="2">
                            <HorizontalStackLayout Margin="20" Spacing="15">
                                <Label Text="{Binding _question}" VerticalTextAlignment="Center"/>
                                <Picker SelectedIndexChanged="AnswerPicker_SelectedIndexChanged" Title="Select an answer" ItemsSource="{Binding options}"></Picker>
                                <Button Text="Submit" Clicked="Button_Clicked"></Button>
                            </HorizontalStackLayout>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>