<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoteApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Fill"
            Loaded="VerticalStackLayout_Loaded">

            <Image Source="voter.png" VerticalOptions="Center"/>

            <Button Text="View open Questions" Clicked="Button_Clicked" VerticalOptions="End"/>
            <Button Text="View all Questions" Clicked="Button_Clicked_1" VerticalOptions="End"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
